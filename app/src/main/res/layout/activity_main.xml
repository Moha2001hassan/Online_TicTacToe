<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#363752"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/player1_layout"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/round_back_dark_blue"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/tvPlayerOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="Player One"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_player1_x"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/ic_x" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/player2_layout"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/round_back_dark_blue2"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/tvPlayerTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="Player Two"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_player2_o"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/ic_o" />
        </LinearLayout>


    </LinearLayout>

    <TableLayout
        android:id="@+id/gameContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#363752"
        android:gravity="center"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button1"
                style="@style/my_button"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_margin="4dp"
                android:text="" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button2"
                style="@style/my_button"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_margin="4dp"
                android:text="" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button3"
                style="@style/my_button"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_margin="4dp"
                android:text="" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button4"
                style="@style/my_button"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_margin="4dp"
                android:text="" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button5"
                style="@style/my_button"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_margin="4dp"
                android:text="" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button6"
                style="@style/my_button"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_margin="4dp"
                android:text="" />
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button7"
                style="@style/my_button"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_margin="4dp"
                android:text="" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button8"
                style="@style/my_button"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_margin="4dp"
                android:text="" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button9"
                style="@style/my_button"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_margin="4dp"
                android:text="" />
        </TableRow>


    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>